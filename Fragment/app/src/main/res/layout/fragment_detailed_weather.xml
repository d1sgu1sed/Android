<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DetailedWeatherFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/weather_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:textAlignment="center"
        android:textSize="70px"
        android:text="Облачно, без осадков, -16°C\n Вероятность осадков: 0%\nВлажность: 68%\nВетер: 1 м/с" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/weather_info"
        app:layout_constraintTop_toBottomOf="@id/weather_info"
        android:layout_marginTop="40dp"
        >
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/rainy"
            android:layout_marginEnd="10dp"
            />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/clouds_and_sun"
            android:layout_marginEnd="10dp"
            />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/snow"
            android:layout_marginEnd="10dp"
            />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/thunder"
            android:layout_marginEnd="10dp"
            />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/windy"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>